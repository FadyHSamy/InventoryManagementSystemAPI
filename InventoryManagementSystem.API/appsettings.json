{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DatabaseSettings": {
    "DefaultConnection": "Data Source=localhost;Initial Catalog=InventoryManagementSystem;Integrated Security=True;Trust Server Certificate=True"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": { "Microsoft": "Error" }
    },
    "WriteTo": [
      { "Name": "Console" }
    ]
  }
